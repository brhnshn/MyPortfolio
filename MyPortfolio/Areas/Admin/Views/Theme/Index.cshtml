@model dynamic
@{
    Layout = null; // Standalone page
    string currentTheme = ViewBag.CurrentTheme as string;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tema Seçimi - My Portfolio Admin</title>

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Admin Glass Styles -->
    <link rel="stylesheet" href="~/css/admin-glass.css">

    <style>
        body {
            background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
            padding: 20px;
        }

        .theme-selection-container {
            width: 100%;
            max-width: 1200px;
        }

        .theme-card {
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.05);
            /* Glass effect */
            backdrop-filter: blur(10px);
            border-radius: 15px;
            height: 100%;
        }

        .theme-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
            border-color: rgba(255, 255, 255, 0.3);
        }

        .theme-card.active {
            border-color: #00f5a0;
            box-shadow: 0 0 20px rgba(0, 245, 160, 0.4);
        }

        .theme-card.active::after {
            content: '\f00c';
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
            position: absolute;
            top: 15px;
            right: 15px;
            background: #00f5a0;
            color: #000;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 10;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            animation: bounceIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        @@keyframes bounceIn {
            0% {
                transform: scale(0);
            }

            50% {
                transform: scale(1.2);
            }

            100% {
                transform: scale(1);
            }
        }

        .theme-preview {
            height: 220px;
            background-size: cover;
            background-position: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
        }

        .theme-preview-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
            backdrop-filter: blur(3px);
        }

        .theme-card:hover .theme-preview-overlay {
            opacity: 1;
        }

        .theme-info {
            padding: 25px;
        }

        /* Preview Gradients */
        .preview-default {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .preview-modern {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .preview-dark {
            background: #121212;
            border: 1px solid #333;
        }

        .btn-select {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 50px;
            padding: 8px 25px;
            font-weight: 500;
            transform: translateY(20px);
            transition: all 0.3s ease;
        }

        .theme-card:hover .btn-select {
            transform: translateY(0);
        }

        .page-title {
            font-size: 3rem;
            font-weight: 700;
            background: linear-gradient(to right, #fff, #a5a5a5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
        }
    </style>
</head>

<body>

    <div class="theme-selection-container container">
        <!-- Header -->
        <div class="row mb-5 justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="page-title">Tasarım Seçimi</h1>
                <p class="lead text-white-50">Web sitenizin kimliğini belirleyin. İstediğiniz zaman değiştirebilirsiniz.
                </p>
            </div>
        </div>

        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="row justify-content-center mb-4">
                <div class="col-lg-6">
                    <div class="alert alert-success alert-dismissible fade show border-0 text-white" role="alert"
                        style="background: rgba(40, 167, 69, 0.2); backdrop-filter: blur(5px); border-radius: 10px;">
                        <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"
                            aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }

        <div class="row justify-content-center g-4">
            <!-- 1. Default Theme -->
            <div class="col-lg-4 col-md-6">
                <form asp-action="SelectTheme" method="post" class="h-100">
                    <input type="hidden" name="themeName" value="DefaultTheme" />
                    <button type="submit" class="border-0 p-0 w-100 h-100 text-start bg-transparent">
                        <div class="theme-card @(currentTheme == "DefaultTheme" ? "active" : "")">
                            <div
                                class="theme-preview preview-default d-flex flex-column align-items-center justify-content-center">
                                <h3 class="text-dark mb-0 fw-bold">KLASİK</h3>
                                <div class="theme-preview-overlay">
                                    <span class="btn-select">SEÇ</span>
                                </div>
                            </div>
                            <div class="theme-info">
                                <h5 class="text-white mb-2">Varsayılan Tema</h5>
                                <p class="text-white-50 small mb-3">
                                    Açık zemin, mavi vurgular ve kurumsal bir duruş. Güven veren standart görünüm.
                                </p>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-primary">Kurumsal</span>
                                    <span class="badge bg-secondary">Açık</span>
                                </div>
                            </div>
                        </div>
                    </button>
                </form>
            </div>

            <!-- 2. Modern Theme -->
            <div class="col-lg-4 col-md-6">
                <form asp-action="SelectTheme" method="post" class="h-100">
                    <input type="hidden" name="themeName" value="ModernTheme" />
                    <button type="submit" class="border-0 p-0 w-100 h-100 text-start bg-transparent">
                        <div class="theme-card @(currentTheme == "ModernTheme" ? "active" : "")">
                            <div
                                class="theme-preview preview-modern d-flex flex-column align-items-center justify-content-center">
                                <h3 class="text-white mb-0 fw-bold"
                                    style="text-shadow: 0 0 10px rgba(255,255,255,0.5);">MODERN</h3>
                                <div class="theme-preview-overlay">
                                    <span class="btn-select">SEÇ</span>
                                </div>
                            </div>
                            <div class="theme-info">
                                <h5 class="text-white mb-2">Modern Glass <span class="badge bg-warning text-dark ms-2"
                                        style="font-size: 0.7em;">POPÜLER</span></h5>
                                <p class="text-white-50 small mb-3">
                                    Koyu mod, neon gradientler ve cam efektleri. Teknolojik ve fütüristik atmosfer.
                                </p>
                                <div class="d-flex gap-2">
                                    <span class="badge" style="background: #667eea;">Gradient</span>
                                    <span class="badge" style="background: #2a2a2a;">Dark</span>
                                </div>
                            </div>
                        </div>
                    </button>
                </form>
            </div>

            <!-- 3. Dark Theme -->
            <div class="col-lg-4 col-md-6">
                <form asp-action="SelectTheme" method="post" class="h-100">
                    <input type="hidden" name="themeName" value="DarkTheme" />
                    <button type="submit" class="border-0 p-0 w-100 h-100 text-start bg-transparent">
                        <div class="theme-card @(currentTheme == "DarkTheme" ? "active" : "")">
                            <div
                                class="theme-preview preview-dark d-flex flex-column align-items-center justify-content-center">
                                <h3 class="text-white mb-0 fw-bold">DARK MODE</h3>
                                <div class="theme-preview-overlay">
                                    <span class="btn-select">SEÇ</span>
                                </div>
                            </div>
                            <div class="theme-info">
                                <h5 class="text-white mb-2">Varsayılan (Dark)</h5>
                                <p class="text-white-50 small mb-3">
                                    Mevcut tasarımın göz yormayan, şık koyu versiyonu.
                                </p>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-dark border border-secondary">Koyu</span>
                                    <span class="badge bg-secondary">Klasik</span>
                                </div>
                            </div>
                        </div>
                    </button>
                </form>
            </div>
        </div>

        <!-- Continue Button -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <a href="/Admin/Dashboard" class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill"
                    style="border-width: 2px; font-weight: 600; transition: all 0.3s; backdrop-filter: blur(5px);">
                    YÖNETİM PANELİNE GİT <i class="fas fa-arrow-right ms-2"></i>
                </a>
                <div class="mt-3">
                    <small class="text-white-50">Seçiminiz otomatik olarak kaydedildi.</small>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
