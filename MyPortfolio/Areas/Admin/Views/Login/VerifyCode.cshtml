@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kod Doğrulama - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
        }
        .glass-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 40px;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }
        .code-input {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: white;
            padding: 15px;
            border-radius: 10px !important;
            font-size: 24px;
            text-align: center;
            letter-spacing: 12px;
            font-weight: bold;
        }
        .code-input:focus {
            background: rgba(255, 255, 255, 0.1);
            border-color: #00f5a0;
            color: white;
            box-shadow: 0 0 20px rgba(0, 245, 160, 0.2);
        }
        .btn-grad {
            background-image: linear-gradient(to right, #667eea 0%, #764ba2 51%, #667eea 100%);
            padding: 12px;
            text-align: center;
            text-transform: uppercase;
            transition: 0.5s;
            background-size: 200% auto;
            color: white;
            box-shadow: 0 0 20px rgba(118, 75, 162, 0.4);
            border-radius: 10px;
            display: block;
            border: none;
            width: 100%;
            font-weight: 600;
            letter-spacing: 1px;
        }
        .btn-grad:hover {
            background-position: right center;
            color: #fff;
            box-shadow: 0 0 30px rgba(118, 75, 162, 0.6);
        }
        ::placeholder { color: rgba(255, 255, 255, 0.3) !important; letter-spacing: 4px; font-size: 16px; }
    </style>
</head>

<body>
    <div class="glass-card">
        <div class="text-center mb-4">
            <div class="mb-3">
                <i class="fas fa-shield-alt fa-3x" style="background: linear-gradient(135deg, #00f5a0, #00d9ff); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
            </div>
            <h2 class="text-white fw-bold">Kod Doğrulama</h2>
            <p class="text-white-50">E-postanıza gönderilen 6 haneli kodu girin.</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger border-0 bg-danger bg-opacity-25 text-white mb-4 text-center">
                <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
            </div>
        }

        <form method="post">
            <div class="mb-4">
                <input type="text" name="code" class="form-control code-input" placeholder="------" maxlength="6" required autofocus />
            </div>

            <div class="d-grid mb-4">
                <button type="submit" class="btn-grad">DOĞRULA</button>
            </div>
        </form>

        <div class="text-center pt-3 border-top border-secondary border-opacity-25">
            <a href="/Admin/Login/ForgotPassword" class="text-white-50 small text-decoration-none">
                <i class="fas fa-redo me-1"></i> Tekrar kod gönder
            </a>
        </div>
    </div>
</body>
</html>
