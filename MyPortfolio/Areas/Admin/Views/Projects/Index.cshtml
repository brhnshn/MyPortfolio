@using MyPortfolio.Entities.Concrete
@model List<Project>

@{
    ViewData["Title"] = "Projelerim";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="glass-container">
    <div class="page-header">
        <div>
            <h4><i class="fas fa-code"></i> Proje Yönetimi</h4>
            <small>Portfolyonuzda sergilemek istediðiniz projeleri buradan yönetin.</small>
        </div>
        <button type="button" class="btn-glass" id="btnOpenAddModal">
            <i class="fas fa-plus"></i> Yeni Proje Ekle
        </button>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="glass-table-wrapper">
        <table class="glass-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Görsel</th>
                    <th>Proje Adý</th>
                    <th>Platform</th>
                    <th>Linkler</th>
                    <th class="text-end">Ýþlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <img src="@item.ImageUrl" class="img-glass"
                                onerror="this.src='https://via.placeholder.com/60x40'" />
                        </td>
                        <td><strong>@item.Title</strong></td>
                        <td><span class="badge-glass">@item.Platform</span></td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.GithubLink))
                            {
                                <a href="@item.GithubLink" target="_blank" class="btn btn-sm btn-action-view me-1"
                                    title="Github">
                                    <i class="fab fa-github"></i>
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(item.ProjectUrl))
                            {
                                <a href="@item.ProjectUrl" target="_blank" class="btn btn-sm btn-action-view" title="Demo">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                            }
                        </td>
                        <td>
                            <div class="table-actions">
                                <button type="button" class="btn btn-action-edit btn-edit" data-id="@item.Id"
                                    data-title="@item.Title" data-github="@item.GithubLink" data-url="@item.ProjectUrl"
                                    data-platform="@item.Platform" data-image="@item.ImageUrl"
                                    data-description="@item.Description">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <form asp-area="Admin" asp-controller="Projects" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline" onsubmit="return confirm('Bu projeyi silmek istediðine emin misin?')">
                                    <button type="submit" class="btn btn-action-delete" title="Sil">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.Count == 0)
        {
            <div class="empty-state">
                <i class="fas fa-laptop-code"></i>
                <p>Henüz proje eklenmemiþ.</p>
            </div>
        }
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade modal-glass" id="addModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus-circle me-2"></i>Yeni Proje Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Admin/Projects/Create" method="post" class="glass-form">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Proje Adý</label>
                            <input type="text" name="Title" class="form-control" required maxlength="150" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Dil / Platform</label>
                            <input type="text" name="Platform" class="form-control" placeholder="Örn: C#, React"
                                required maxlength="100" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Github Link</label>
                            <input type="text" name="GithubLink" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Canlý Demo Link</label>
                            <input type="text" name="ProjectUrl" class="form-control" />
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label"><i class="fas fa-image text-info me-1"></i>Görsel URL</label>
                            <input type="url" name="ImageUrl" class="form-control"
                                placeholder="https://example.com/image.jpg" />
                            <small class="text-muted">Resim dosyasý yerine URL yapýþtýrýn</small>
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label">Açýklama</label>
                            <textarea name="Description" class="form-control" rows="3" required></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-glass" data-bs-dismiss="modal">Ýptal</button>
                    <button type="submit" class="btn-glass btn-glass-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade modal-glass" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background: var(--gradient-warning);">
                <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Projeyi Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Admin/Projects/Edit" method="post" class="glass-form">
                <div class="modal-body">
                    <input type="hidden" name="Id" id="editId" />
                    <div class="row">
                        <div class="col-12 text-center mb-4">
                            <img id="editImagePreview" src="" class="img-glass" style="width: 150px; height: 90px;"
                                onerror="this.src='https://via.placeholder.com/150x90'" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Proje Adý</label>
                            <input type="text" name="Title" id="editTitle" class="form-control" required
                                maxlength="150" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Dil / Platform</label>
                            <input type="text" name="Platform" id="editPlatform" class="form-control" required
                                maxlength="100" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Github Link</label>
                            <input type="text" name="GithubLink" id="editGithub" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Canlý Demo Link</label>
                            <input type="text" name="ProjectUrl" id="editUrl" class="form-control" />
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label"><i class="fas fa-image text-info me-1"></i>Görsel URL</label>
                            <input type="url" name="ImageUrl" id="editImageUrl" class="form-control" />
                            <small class="text-muted">Resim dosyasý yerine URL yapýþtýrýn</small>
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label">Açýklama</label>
                            <textarea name="Description" id="editDescription" class="form-control" rows="3"
                                required></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-glass" data-bs-dismiss="modal">Ýptal</button>
                    <button type="submit" class="btn-glass btn-glass-warning">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var btnAdd = document.getElementById("btnOpenAddModal");
            if (btnAdd) {
                btnAdd.addEventListener("click", function () {
                    var myModal = new bootstrap.Modal(document.getElementById('addModal'));
                    myModal.show();
                });
            }

            var editButtons = document.querySelectorAll(".btn-edit");
            editButtons.forEach(function (btn) {
                btn.addEventListener("click", function () {
                    var id = this.getAttribute("data-id");
                    var title = this.getAttribute("data-title");
                    var github = this.getAttribute("data-github");
                    var url = this.getAttribute("data-url");
                    var platform = this.getAttribute("data-platform");
                    var description = this.getAttribute("data-description");
                    var imageUrl = this.getAttribute("data-image");

                    document.getElementById('editId').value = id;
                    document.getElementById('editImageUrl').value = imageUrl;
                    document.getElementById('editTitle').value = title;
                    document.getElementById('editGithub').value = github;
                    document.getElementById('editUrl').value = url;
                    document.getElementById('editPlatform').value = platform;
                    document.getElementById('editDescription').value = description;
                    document.getElementById('editImagePreview').src = imageUrl;

                    var myModal = new bootstrap.Modal(document.getElementById('editModal'));
                    myModal.show();
                });
            });

            var forms = document.querySelectorAll("form");
            forms.forEach(function (form) {
                form.addEventListener("submit", function () {
                    if (form.checkValidity()) {
                        var btn = form.querySelector('button[type="submit"]');
                        if (btn) {
                            btn.disabled = true;
                            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Ýþleniyor...';
                        }
                    }
                });
            });
        });
    </script>
}