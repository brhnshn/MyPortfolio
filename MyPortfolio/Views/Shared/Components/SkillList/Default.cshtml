@using MyPortfolio.Entities.Concrete
@model List<Skill>

<section id="skills" class="skills" style="background-color: #ffffff;">
    <div class="container" data-aos="fade-up">

        <div class="section-title text-center mb-5">
            <h2>Yetenekler</h2>
            <p>Teknik yetkinliklerim ve kullandığım teknolojiler.</p>
        </div>

        <div class="row skills-content">
            @foreach (var item in Model)
            {
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="progress-wrapper mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="skill d-block fw-bold text-dark" style="font-size: 0.95rem;">
                                @item.Title <small class="text-muted fw-normal ms-2" style="font-size: 0.8rem;">(@item.Category)</small>
                            </span>
                            <span class="val fw-bold text-primary">@item.Percentage%</span>
                        </div>

                        <div class="progress-bar-wrap bg-light" style="height: 12px; border-radius: 6px; overflow: hidden;">
                            <div class="progress-bar bg-primary" role="progressbar"
                                 aria-valuenow="@item.Percentage" aria-valuemin="0" aria-valuemax="100"
                                 style="width: @item.Percentage%; height: 12px; border-radius: 6px; transition: width 1.5s ease-in-out;">
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Count == 0)
            {
                <div class="col-12 text-center text-muted py-5">
                    <i class="fas fa-code fa-3x mb-3 opacity-25"></i>
                    <p>Henüz yetenek eklenmemiş.</p>
                </div>
            }
        </div>

    </div>
</section>