@using MyPortfolio.Entities.Concrete
@using MyPortfolio.Data.Abstract
@model List<About>

@inject IGenericRepository<SiteSettings> SettingsRepo

@{
    var item = Model.LastOrDefault();
    var layoutMode = SettingsRepo.GetList().FirstOrDefault()?.LayoutMode ?? "SinglePage";
}

<section id="about" class="py-5 bg-white">
    <div class="container" data-aos="fade-up">

        <div class="text-center mb-5">
            <h2 class="fw-bold text-dark">Hakkımda</h2>
            <div style="width: 60px; height: 3px; background: #0d6efd; margin: 10px auto;"></div>
        </div>

        @if (item != null)
        {
            <div class="row justify-content-center">
                <div class="col-lg-9" data-aos="fade-up" data-aos-delay="100">

                    <div class="row mb-5 align-items-center">
                        <div class="col-md-6 mb-4 mb-md-0">
                            <h3 class="fw-bold text-dark mb-2">@item.FullName</h3>
                            <div class="d-flex align-items-center mb-3">
                                <div style="width: 40px; height: 2px; background: #0d6efd; margin-right: 10px;"></div>
                                <h5 class="text-primary mb-0">@item.Title</h5>
                            </div>
                            <p class="text-muted lead text-break" style="font-size: 1.05rem;">
                                @(item.Description ?? "Kısa açıklama...")
                            </p>
                        </div>

                        <div class="col-md-6">
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="p-3 border rounded bg-light text-center hover-card h-100">
                                        <i class="fas fa-code-branch fa-2x text-primary mb-2"></i>
                                        <h4 class="fw-bold mb-0">@(item.ProjectCount ?? "0")</h4>
                                        <small class="text-muted" style="font-size: 0.8rem;">Proje</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 border rounded bg-light text-center hover-card h-100">
                                        <i class="fas fa-coffee fa-2x text-primary mb-2"></i>
                                        <h4 class="fw-bold mb-0">@(item.ExperienceYear ?? "0")</h4>
                                        <small class="text-muted" style="font-size: 0.8rem;">Deneyim</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 border rounded bg-light text-center hover-card h-100">
                                        <i class="fas fa-users fa-2x text-primary mb-2"></i>
                                        <h4 class="fw-bold mb-0">@(item.CustomerCount ?? "0")</h4>
                                        <small class="text-muted" style="font-size: 0.8rem;">Mutlu Müşteri</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 border rounded bg-light text-center hover-card h-100">
                                        <i class="fas fa-laptop-code fa-2x text-primary mb-2"></i>
                                        <h5 class="fw-bold mb-0">Aktif</h5>
                                        <small class="text-muted" style="font-size: 0.8rem;">Çalışma</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <p class="text-muted mb-4 text-break" style="line-height: 1.8; text-align: justify;">
                            @(item.Details ?? "Detaylı açıklama metni buraya gelecek...")
                        </p>

                        <div class="d-flex justify-content-center justify-content-md-start gap-3">
                            <a href="@(layoutMode == "MultiPage" ? "/Home/Contact" : "#contact")"
                                class="btn btn-primary px-4 py-2 rounded-pill shadow-sm hover-top">
                                <i class="fas fa-paper-plane me-2"></i> İletişim
                            </a>

                            @if (!string.IsNullOrEmpty(item.CvUrl))
                            {
                                <a href="@item.CvUrl" target="_blank"
                                    class="btn btn-outline-dark px-4 py-2 rounded-pill shadow-sm hover-top">
                                    <i class="fas fa-download me-2"></i> CV İndir
                                </a>
                            }
                        </div>
                    </div>

                </div>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">Veri Yok</div>
        }
    </div>
</section>