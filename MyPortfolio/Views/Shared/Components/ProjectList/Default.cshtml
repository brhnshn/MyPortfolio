@using MyPortfolio.Entities.Concrete
@model List<Project>

<section id="projects" class="projects py-5" style="background-color: #f6f9fe;">
    <div class="container" data-aos="fade-up">

        <div class="section-title text-center mb-5">
            <h2 class="fw-bold text-dark">Projelerim</h2>
            <p class="text-muted">Geliştirdiğim güncel çalışmalar ve açık kaynak projeler.</p>
        </div>

        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="card h-100 border-0 shadow-sm project-card">

                        <div class="project-img-container position-relative">
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title"
                                 onerror="this.src='https://via.placeholder.com/600x400?text=Proje+Gorseli'">

                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-light text-primary shadow-sm fw-bold">@item.Platform</span>
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column p-4">
                            <h5 class="card-title fw-bold text-dark mb-2">@item.Title</h5>

                            <p class="card-text text-muted small mb-4 flex-grow-1" >
                                @item.Description
                            </p>

                            <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                                <div>
                                    @if (!string.IsNullOrEmpty(item.GithubLink))
                                    {
                                        <a href="@item.GithubLink" target="_blank" class="text-dark text-decoration-none fw-bold small hover-primary" title="Github Kodları">
                                            <i class="fab fa-github fa-lg me-1"></i> Kodlar
                                        </a>
                                    }
                                </div>
                                <div>
                                    @if (!string.IsNullOrEmpty(item.ProjectUrl))
                                    {
                                        <a href="@item.ProjectUrl" target="_blank" class="btn btn-sm btn-outline-primary rounded-pill px-3 fw-bold">
                                            Canlı Demo <i class="fas fa-arrow-right ms-1"></i>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Count == 0)
            {
                <div class="col-12 text-center text-muted py-5">
                    <i class="fas fa-layer-group fa-3x mb-3 opacity-25"></i>
                    <p>Henüz proje eklenmemiş.</p>
                </div>
            }
        </div>
    </div>
</section>
