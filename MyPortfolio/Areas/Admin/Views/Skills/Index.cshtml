@using MyPortfolio.Entities.Concrete
@model List<Skill>

@{
    ViewData["Title"] = "Yetenekler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .progress-glass {
        height: 8px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        overflow: hidden;
        flex-grow: 1;
    }
    .progress-glass-bar {
        height: 100%;
        border-radius: 10px;
        transition: width 0.6s ease;
    }
    .progress-success { background: linear-gradient(90deg, #00f5a0, #00d9ff); }
    .progress-warning { background: linear-gradient(90deg, #ff9a00, #ff5500); }
    .progress-danger { background: linear-gradient(90deg, #ff416c, #ff4b2b); }
</style>

<div class="glass-container">
    <div class="page-header">
        <div>
            <h4><i class="fas fa-bolt"></i> Yetenek Yönetimi</h4>
            <small>Yazýlým, dil ve diðer teknik becerilerinizi buradan yönetin.</small>
        </div>
        <button type="button" class="btn-glass" id="btnOpenAddModal">
            <i class="fas fa-plus"></i> Yeni Yetenek Ekle
        </button>
    </div>

    <div class="glass-table-wrapper">
        <table class="glass-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kategori</th>
                    <th>Baþlýk</th>
                    <th style="width: 35%;">Oran</th>
                    <th class="text-end">Ýþlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string progressClass = "progress-success";
                    if (item.Percentage < 50) progressClass = "progress-danger";
                    else if (item.Percentage < 80) progressClass = "progress-warning";

                    <tr>
                        <td>@item.Id</td>
                        <td><span class="badge-glass">@item.Category</span></td>
                        <td><strong>@item.Title</strong></td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <span class="text-muted" style="min-width: 40px;">@item.Percentage%</span>
                                <div class="progress-glass">
                                    <div class="progress-glass-bar @progressClass" style="width: @item.Percentage%;"></div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="table-actions">
                                <button type="button" class="btn btn-action-edit btn-edit"
                                        data-id="@item.Id"
                                        data-title="@item.Title"
                                        data-percentage="@item.Percentage"
                                        data-category="@item.Category">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <form asp-area="Admin" asp-controller="Skills" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline" onsubmit="return confirm('Bu yeteneði silmek istediðine emin misin?')">
                                    <button type="submit" class="btn btn-action-delete" title="Sil">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.Count == 0)
        {
            <div class="empty-state">
                <i class="fas fa-chart-bar"></i>
                <p>Henüz yetenek eklenmemiþ.</p>
            </div>
        }
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade modal-glass" id="addModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus-circle me-2"></i>Yeni Yetenek Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Admin/Skills/Create" method="post" class="glass-form">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Kategori</label>
                        <input type="text" name="Category" class="form-control" placeholder="Örn: Yazýlým" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yetenek Adý</label>
                        <input type="text" name="Title" class="form-control" placeholder="Örn: C#" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Oran (0-100)</label>
                        <input type="number" name="Percentage" class="form-control" min="0" max="100" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-glass" data-bs-dismiss="modal">Ýptal</button>
                    <button type="submit" class="btn-glass btn-glass-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade modal-glass" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: var(--gradient-warning);">
                <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Yeteneði Güncelle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Admin/Skills/Edit" method="post" class="glass-form">
                <div class="modal-body">
                    <input type="hidden" name="Id" id="editId" />
                    <div class="mb-3">
                        <label class="form-label">Kategori</label>
                        <input type="text" name="Category" id="editCategory" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yetenek Adý</label>
                        <input type="text" name="Title" id="editTitle" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Oran (0-100)</label>
                        <input type="number" name="Percentage" id="editPercentage" class="form-control" min="0" max="100" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-glass" data-bs-dismiss="modal">Ýptal</button>
                    <button type="submit" class="btn-glass btn-glass-warning">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var btnAdd = document.getElementById("btnOpenAddModal");
        if(btnAdd){
            btnAdd.addEventListener("click", function(){
                var myModal = new bootstrap.Modal(document.getElementById('addModal'));
                myModal.show();
            });
        }

        var editButtons = document.querySelectorAll(".btn-edit");
        editButtons.forEach(function(btn) {
            btn.addEventListener("click", function() {
                document.getElementById('editId').value = this.getAttribute("data-id");
                document.getElementById('editTitle').value = this.getAttribute("data-title");
                document.getElementById('editPercentage').value = this.getAttribute("data-percentage");
                document.getElementById('editCategory').value = this.getAttribute("data-category");
                var myModal = new bootstrap.Modal(document.getElementById('editModal'));
                myModal.show();
            });
        });
    });
</script>
}