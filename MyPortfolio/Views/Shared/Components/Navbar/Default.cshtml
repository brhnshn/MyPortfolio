@model List<MyPortfolio.Entities.Concrete.NavbarItem>

@{
    // SectionId -> Action name mapping for MultiPage mode

    var sectionToAction = new Dictionary<string, string>
{
{ "about", "About" },
{ "projects", "Projects" },
{ "skills", "Skills" },
{ "services", "Services" },
{ "testimonials", "Testimonials" },
{ "contact", "Contact" }
};

    var layoutMode = ViewBag.LayoutMode as string ?? "SinglePage";
}

<nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top" id="mainNav">
    <div class="container">
        <a class="navbar-brand" href="@(layoutMode == "MultiPage" ? "/" : "#hero")">@ViewBag.BrandTitle</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                @foreach (var item in Model)

                {
                    <li class="nav-item">
                        @if (layoutMode == "MultiPage" && item.SectionId != "hero" &&
                       sectionToAction.ContainsKey(item.SectionId))

                        {
                            <a class="nav-link" href="@Url.Action(sectionToAction[item.SectionId], "Home")">@item.Title</a>
                        }

                        else if (layoutMode == "MultiPage" && item.SectionId == "hero")

                        {

                            // Coklu sayfa modunda anasayfa butonu (hero) direkt k√∂k dizine gitmeli
                            <a class="nav-link" href="/">@item.Title</a>
                        }

                        else

                        {
                            <a class="nav-link" href="#@item.SectionId">@item.Title</a>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>