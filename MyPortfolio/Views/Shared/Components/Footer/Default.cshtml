@using MyPortfolio.Entities.Concrete
@model SiteSettings

<div class="footer-top">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 footer-info">
                <h3>@Model.FooterTitle</h3>
                <p>@Model.FooterDescription</p>
                <div class="social-links mt-3">
                    @if (!string.IsNullOrEmpty(Model.GithubUrl))
                    {
                        <a href="@Model.GithubUrl" target="_blank" class="github"><i class="fab fa-github"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(Model.InstagramUrl))
                    {
                        <a href="@Model.InstagramUrl" target="_blank" class="instagram"><i class="fab fa-instagram"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(Model.LinkedinUrl))
                    {
                        <a href="@Model.LinkedinUrl" target="_blank" class="linkedin"><i class="fab fa-linkedin-in"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(Model.XUrl))
                    {
                        <a href="@Model.XUrl" target="_blank" class="twitter"><i class="fab fa-x-twitter"></i></a>
                    }
                </div>
            </div>

            <div class="col-lg-2 col-md-6 footer-links">
                <h4>Site Haritası</h4>
                <ul>
                    <li><i class="fas fa-chevron-right"></i> <a href="#hero">Ana Sayfa</a></li>
                    <li><i class="fas fa-chevron-right"></i> <a href="#about">Hakkımda</a></li>
                    <li><i class="fas fa-chevron-right"></i> <a href="#projects">Galeri / Projeler</a></li>
                    <li><i class="fas fa-chevron-right"></i> <a href="/Admin/Login">Yönetim Paneli</a></li>
                </ul>
            </div>

            <div class="col-lg-3 col-md-6 footer-links">
                <h4>Bana Ulaşın</h4>
                <p style="color: #b0b9ce;">
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <strong>Email:</strong> @Model.Email

                        <br>
                    }
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <strong>Tel:</strong> @Model.Phone
                    }
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container footer-bottom">
    <div class="copyright">
        &copy; Copyright <strong><span>@Model.CopyrightText</span></strong>. Tüm Hakları Saklıdır.
    </div>
    <div class="credits mt-2" style="font-size: 13px;">
        Designed &amp; Developed by <a href="@Model.DeveloperUrl"
            style="color: #0d6efd; text-decoration: none;">@Model.DeveloperName</a>
    </div>
</div>
