@model MyPortfolio.Areas.Admin.Models.UserLoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin-glass.css">

    <style>
        body {
            background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
        }

        .glass-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 40px;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }

        .form-control {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: white;
            padding: 12px 20px;
            border-radius: 10px;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.1);
            border-color: #00f5a0;
            color: white;
            box-shadow: none;
        }

        .input-group-text {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-right: none;
            color: rgba(255, 255, 255, 0.6);
            border-radius: 10px 0 0 10px;
        }

        .form-control {
            border-radius: 0 10px 10px 0 !important;
        }

        .btn-grad {
            background-image: linear-gradient(to right, #667eea 0%, #764ba2 51%, #667eea 100%);
            padding: 12px;
            text-align: center;
            text-transform: uppercase;
            transition: 0.5s;
            background-size: 200% auto;
            color: white;
            box-shadow: 0 0 20px rgba(118, 75, 162, 0.4);
            border-radius: 10px;
            display: block;
            border: none;
            width: 100%;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .btn-grad:hover {
            background-position: right center;
            color: #fff;
            text-decoration: none;
            box-shadow: 0 0 30px rgba(118, 75, 162, 0.6);
        }

        .form-label {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 8px;
            font-size: 0.9rem;
        }

        ::placeholder {
            color: rgba(255, 255, 255, 0.4) !important;
        }
    </style>
</head>

<body>

    <div class="glass-card">
        <div class="text-center mb-5">
            <div class="mb-3">
                <i class="fas fa-layer-group fa-3x"
                    style="background: linear-gradient(135deg, #00f5a0, #00d9ff); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
            </div>
            <h2 class="text-white fw-bold">Hoş Geldiniz</h2>
            <p class="text-white-50">Admin paneline erişmek için giriş yapın.</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger border-0 bg-danger bg-opacity-25 text-white mb-4">
                <div asp-validation-summary="ModelOnly"></div>
            </div>
        }

        <form method="post">
            <div class="mb-4">
                <label class="form-label">Kullanıcı Adı</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" asp-for="Username" class="form-control" placeholder="Kullanıcı adınızı girin"
                        required />
                </div>
            </div>

            <div class="mb-5">
                <label class="form-label">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" asp-for="Password" class="form-control" placeholder="••••••••" required />
                </div>
            </div>

            <div class="d-grid mb-4">
                <button type="submit" class="btn-grad">GİRİŞ YAP</button>
            </div>
        </form>

        <div class="text-center mb-3">
            <a href="/Admin/Login/ForgotPassword" class="text-white-50 small text-decoration-none" style="transition: color 0.3s;">
                <i class="fas fa-key me-1"></i>Şifremi Unuttum
            </a>
        </div>

        <div class="text-center pt-3 border-top border-secondary border-opacity-25">
            <span class="text-white-50 small">Hesabınız yok mu?</span>
            <a href="/Admin/Login/Register" class="text-white fw-bold text-decoration-none ms-2"
                style="transition: color 0.3s;">Kayıt Ol</a>
        </div>
    </div>

</body>

</html>