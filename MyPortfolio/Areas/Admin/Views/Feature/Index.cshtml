@using MyPortfolio.Entities.Concrete
@model List<Feature>

@{
    ViewData["Title"] = "Öne Çıkanlar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="glass-container">
    <div class="page-header">
        <div>
            <h4><i class="fas fa-star"></i> Öne Çıkanlar</h4>
            <small>Site girişindeki "Merhaba" mesajını buradan yönetin.</small>
        </div>
        @if (Model.Count == 0)
        {
            <button type="button" class="btn-glass" data-bs-toggle="modal" data-bs-target="#addModal">
                <i class="fas fa-plus"></i> Yeni Ekle
            </button>
        }
        else
        {
            <span class="badge-glass badge-glass-success"><i class="fas fa-check me-1"></i>Kayıt Mevcut</span>
        }
    </div>

    <div class="glass-table-wrapper">
        <table class="glass-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Görsel</th>
                    <th>Başlık</th>
                    <th>Ad Soyad</th>
                    <th>Ünvan</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" class="img-glass" style="width: 60px; height: 60px;" />
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td style="color: var(--neon-cyan); font-weight: 600;">@item.Header</td>
                        <td>@item.Name</td>
                        <td><span class="badge-glass">@item.Title</span></td>
                        <td>
                            <div class="table-actions">
                                <button type="button" class="btn btn-action-edit"
                                    onclick="openEditModal('@item.Id', '@item.Header', '@item.Name', '@item.Title', '@item.ImageUrl')">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <a href="/Admin/Feature/Delete/@item.Id" class="btn btn-action-delete"
                                    onclick="return confirm('Silmek istediğine emin misin?');">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.Count == 0)
        {
            <div class="empty-state">
                <i class="fas fa-star"></i>
                <p>Henüz öne çıkan eklenmemiş.</p>
            </div>
        }
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade modal-glass" id="addModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus-circle me-2"></i>Yeni Öne Çıkan Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Admin/Feature/Create" method="post" enctype="multipart/form-data" class="glass-form">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Üst Başlık</label>
                        <input type="text" name="Header" class="form-control" placeholder="Merhaba!" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ad Soyad</label>
                        <input type="text" name="Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Meslek / Ünvan</label>
                        <input type="text" name="Title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Arkaplan Görseli</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-glass" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn-glass btn-glass-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade modal-glass" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: var(--gradient-warning);">
                <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Admin/Feature/Edit" method="post" enctype="multipart/form-data" class="glass-form">
                <div class="modal-body">
                    <input type="hidden" name="Id" id="editId" />
                    <div class="text-center mb-3">
                        <img id="editImagePreview" src="" class="img-glass"
                            style="width: 100%; max-height: 120px; display: none;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Üst Başlık</label>
                        <input type="text" name="Header" id="editHeader" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ad Soyad</label>
                        <input type="text" name="Name" id="editName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Meslek / Ünvan</label>
                        <input type="text" name="Title" id="editTitle" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yeni Görsel (Opsiyonel)</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-glass" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn-glass btn-glass-warning">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal(id, header, name, title, imageUrl) {
            document.getElementById('editId').value = id;
            document.getElementById('editHeader').value = header;
            document.getElementById('editName').value = name;
            document.getElementById('editTitle').value = title;

            var imgPreview = document.getElementById('editImagePreview');
            if (imageUrl) {
                imgPreview.src = imageUrl;
                imgPreview.style.display = "block";
            } else {
                imgPreview.style.display = "none";
            }

            new bootstrap.Modal(document.getElementById('editModal')).show();
        }
    </script>
}